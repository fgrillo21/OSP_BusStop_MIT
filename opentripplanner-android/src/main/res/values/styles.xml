<resources>

    <!-- Application root theme -->
    <style name="BaseThemeDark" parent="@style/Theme.AppCompat">

        <item name="btnMyLocationPicture">@drawable/device_access_location_found_dark</item>
        <item name="btnDisplayDirPicture">@drawable/location_directions_dark</item>
        <item name="btnSwapOrDestPicture">@drawable/ic_action_import_export_dark</item>
        <item name="btnDateDialogPicture">@drawable/location_directions_dark</item>
        <item name="btnShowFeaturesPicture">@drawable/show_features_selector_dark</item>
        <item name="btnBackground">@drawable/button_layout_dark</item>
        <item name="btnBottomBackground">@drawable/button_bottom_layout_dark</item>
        <item name="textViewPresetStyle">@style/PresetTextViewFontDark</item>
        <item name="filter_icon">@drawable/filter_icon_dark</item>
    </style>

    <style name="BlackTextDark" parent="BaseThemeDark">

        <item name="android:textColor">@color/black</item>

    </style>

    <!-- Preset TextView's font -->
    <style name="PresetTextViewFontLight">

        <item name="android:textColor">@color/sysBlack</item>

    </style>

    <!-- Preset TextView's font -->
    <style name="PresetTextViewFontDark">

        <item name="android:textColor">@color/sysWhite</item>

    </style>

    <style name="BaseThemeLight" parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <item name="btnMyLocationPicture">@drawable/device_access_location_found</item>
        <item name="btnDisplayDirPicture">@drawable/location_directions</item>
        <item name="btnSwapOrDestPicture">@drawable/ic_action_import_export</item>
        <item name="btnDateDialogPicture">@drawable/location_directions</item>
        <item name="btnShowFeaturesPicture">@drawable/show_features_selector</item>
        <item name="btnBackground">@drawable/button_layout</item>
        <item name="btnBottomBackground">@drawable/button_bottom_layout</item>
        <item name="textViewPresetStyle">@style/PresetTextViewFontLight</item>
        <item name="filter_icon">@drawable/filter_icon_light</item>
    </style>

    <style name="MyThemeDark"  parent="BaseThemeDark" />
    <style name="MyThemeLight" parent="BaseThemeLight" />

</resources>